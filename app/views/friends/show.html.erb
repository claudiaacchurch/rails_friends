
<div class="p-5 mb-4 bg-body-tertiary rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">
      <%= @friend.first_name %> 
      <%= @friend.last_name %>
    </h1>
       <br />
    <p class="col-md-8"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
    <br />
    <div>
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-primary" %> 
      <%= link_to "Back", :back, class:"btn btn-dark" %>
      <%= link_to "Friends", friends_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>
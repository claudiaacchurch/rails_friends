<% if user_signed_in? %>

  <h1>Friends</h1>

  <div id="friends">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <td>Name</td>
          <td>Email</td>
          <td>Phone</td>
          <td>Twitter</td>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
          <%= render friend, view_context: 'index' %>
        </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>
  </div>
  <div>
    <%= link_to "New", new_friend_path, class:"btn btn-primary"%>
  </div>

<% else %>

<h1>Hello World!</h1>
<p>This is my index</p>

<% end %>
